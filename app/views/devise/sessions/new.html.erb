<div class="authorization-wrapper">
  <div class="authorization-form-wrapper">
    <h2 class="authorization-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :phone_number, class: 'authorization-input-label' %><br />
        <%= f.text_field :phone_number, autofocus: true, class: 'authorization-input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'authorization-input-label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'authorization-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'authorization-input-label' %>
        </div>
      <% end %>

      <div class="actions authorization-submit-wrapper">
        <%= f.submit "Log in", class: 'authorization-submit-button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
